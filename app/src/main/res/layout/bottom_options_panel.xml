<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/bottom_options_panel"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_alignParentBottom="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/button_row"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333"
            android:layout_alignParentTop="true"/>

        <View
            android:id="@+id/button_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="#333"/>
        <Button
            android:id="@+id/cancel_action"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:tint="@android:color/black"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_toLeftOf="@id/button_divider"
            />
        <Button
            android:id="@+id/merge_action"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="Merge/Rename"
            android:layout_toRightOf="@id/button_divider"
            android:contentDescription="Button to rename subcategory or merge different subcategory of goals into one subcategory"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>