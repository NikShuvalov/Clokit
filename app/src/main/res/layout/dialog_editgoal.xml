<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp">

    <!--Put goal description instead of "Adjust time:"
    Included would be the name, subcategory and current time allocated to it.-->
    <EditText
        android:id="@+id/name_edit_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter new name"/>
    <EditText
        android:id="@+id/subcat_edit_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter new subcategory (Optional)"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adjust progress by: "
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/adjustment_time_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#000"
        />

    <LinearLayout
        android:id="@+id/edit_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">
        <ImageView
            android:id="@+id/add_time_butt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/plus"/>

        <EditText
            android:id="@+id/hour_entry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:inputType="number"
            android:hint="Hours"/>

        <Space
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/minute_entry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:inputType="number"
            android:hint="Minutes"/>
        <ImageView
            android:id="@+id/remove_time_butt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/minus"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/button_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--<Button-->
            <!--android:id="@+id/add_time_butt"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:text="Add time"/>-->
<!--s        <Button-->
            <!--android:id="@+id/remove_time_butt"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:text="Remove time"/>-->
        <Button
            android:id="@+id/set_zer0_butt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear Progress on Goal"/>

    </LinearLayout>


</LinearLayout>